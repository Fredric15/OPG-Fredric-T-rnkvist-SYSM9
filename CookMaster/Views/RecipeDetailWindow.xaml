<Window x:Class="CookMaster.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        mc:Ignorable="d"
        Title="RecipeDetailWindow" Height="450" Width="400">
    <StackPanel>
        <TextBlock Text="Title:" FontWeight="Bold" Width="Auto" Margin="5,5,5,0"/>
        <TextBox Text="{Binding EditTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Editable}" Margin="5,0,5,0"/>
        <TextBlock Text="Ingredients:" FontWeight="Bold" Width="Auto" Margin="5,5,5,0"/>
        <TextBox Text="{Binding EditIngredients, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Editable}" MinHeight="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5,0,5,0"/>
        <TextBlock Text="Instructions:" FontWeight="Bold" Width="Auto" Margin="5,5,5,0"/>
        <TextBox Text="{Binding EditInstructions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Editable}" MinHeight="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"  Margin="5,0,5,0"/>
        <TextBlock Text="Estimated time: (mins)" FontWeight="Bold" Margin="5,5,5,0"/>
        <TextBox Text="{Binding EditTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Editable}" Margin="5,0,5,0"/>
        <TextBlock Text="Category:" FontWeight="Bold" Width="Auto" Margin="5,0,5,0"/>
        <ComboBox ItemsSource="{Binding Category, Mode=TwoWay}" SelectedItem="{Binding EditCategory, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Margin="5,0,5,0"/>
        <TextBlock Text="{Binding ErrorText}" TextWrapping="Wrap" Foreground="Red" Width="auto" Margin="5,5,5,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save" Height="25" Width="75" Command="{Binding SaveCommand}" Margin="5,5,5,0"/>
            <Button Content="Edit recipe" Height="25" Width="75" Command="{Binding EditCommand}" Margin="5,5,5,0"/>
            <Button Content="Cancel" Height="25" Width="75" Command="{Binding CancelCommand}" Margin="5,5,5,0"/>
            <Button Content="Copy" Height="25" Width="75" Command="{Binding CopyCommand}" Margin="5,5,5,0"/>
        </StackPanel>
    </StackPanel>
</Window>
