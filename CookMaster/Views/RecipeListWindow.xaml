<Window x:Class="CookMaster.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookMaster.Views"
        xmlns:local1="clr-namespace:CookMaster.MVVM"
        xmlns:local2="clr-namespace:CookMaster.Managers"
        mc:Ignorable="d"
        Title="RecipeListWindow" Height="450" Width="800">
    
    <Window.Resources>
        <local1:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Content="{Binding Source={StaticResource UserManager}, Path=CurrentUser.UserName, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Command="{Binding UserDetailsCommand}" FontWeight="Bold" Background="Transparent" Height="30" Width="75" Margin="5" HorizontalAlignment="Left"/>
        <Button Content="Sign out" FontWeight="Bold" Command="{Binding SignOutCommand}" HorizontalAlignment="Right" Width="75" Height="30" Margin="5" />
        
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="70"
                Height="30"
                Content="Add"
                Command="{Binding AddCommand}"/>
            <Button
                Width="70"
                Height="30"
                Content="Delete"
                Command="{Binding RemoveCommand}"/>
            <Button
                Width="70"
                Height="30"
                Content="Details"
                Command="{Binding DetailsCommand}"/>
            <Button 
                Content="Info"
                Width="70"
                Height="30"
                Command="{Binding InfoCommand}"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--En readonly datagrid så man inte kan ändra i raderna och kolumnerna på recepten-->
            <DataGrid
                IsReadOnly="True"
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                ItemsSource="{Binding VisibleRecipeList}"
                SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}">


                <DataGrid.Columns>
                    <DataGridTextColumn Width="4*" Header="Title" Binding="{Binding Title}" />
                    <DataGridTextColumn Width="3*" Header="Created By:" Binding="{Binding CreatedBy.UserName, UpdateSourceTrigger=PropertyChanged}"/>
                    <DataGridTextColumn Width="3*" Header="Category" Binding="{Binding Category}"/>
                    <DataGridTextColumn Width="3*" Header="Estimated time:" Binding="{Binding Time, StringFormat='{}{0} mins'}"/>
                    <DataGridTextColumn Width="2*" Header="Date added" Binding="{Binding Date}"/>
                </DataGrid.Columns>

            </DataGrid>

            <StackPanel Grid.Column="1">
                <Label Content="Filter by Category:"/>
                <ComboBox ItemsSource="{Binding Category,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedCategory,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,5,0"/>
                <!--Label, Combobox samt Button som endast är synliga för en Admin-->
                <!--Om CurrentUser är en Admin så får UserManagers property "IsAdmin" värdet True och då syns dessa för en Admin när denna loggar in-->
                <Label Content="Filter by User:" Visibility="{Binding Source={StaticResource UserManager}, Path=IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" />
                <ComboBox ItemsSource="{Binding AllUsersList, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedUser,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="UserName" Visibility="{Binding Source={StaticResource UserManager}, Path=IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5,0,5,0"/>
                <Button Content="Reset filter" Command="{Binding ResetFilterCommand, UpdateSourceTrigger=PropertyChanged}" Width="75" HorizontalAlignment="Left" Visibility="{Binding Source={StaticResource UserManager}, Path=IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" Margin="5"/>
            </StackPanel>

        </Grid>
    </Grid>
</Window>
